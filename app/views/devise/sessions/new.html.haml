.website-content.auth-page-content
  .container
    .row
      .col-xs-12
        %h2.text-center.auth-head-text Log in
        = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          .field
            = f.text_field :login, class: 'auth-input', id: 'login-input', placeholder: 'Login'
          .field
            = f.password_field :password, autocomplete: "off", class: 'auth-input', id: 'login-pwd-input', placeholder: 'Password'
          .actions
            = f.submit "Log in", class: 'btn btn-success auth-submit'
        .text-center.auth-links
          = render "devise/shared/links"
