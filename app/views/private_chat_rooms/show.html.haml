        -#= render @private_chat_room.private_messages
      .chat-send-form-container
        = form_for @message, url: '#', html:{id: 'private_new_message'} do |f|
          = hidden_field_tag 'private_chat_room_id', @private_chat_room.id
          .input-group
            = f.text_area :content, class: 'form-control custom-control', html: {:rows => "2", :style => "resize:none"}
            %span.input-group-addon.btn.btn-primary
              = f.submit 'Send', class: 'btn-send-message btn-private-chat-send btn btn-primary'
