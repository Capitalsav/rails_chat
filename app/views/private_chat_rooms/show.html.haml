.container-fluid.main-chat-container
  .row.main-chat-row
    .chat-menu-col
      %p.left-chat-menu-section Room members:
      .left-chat-menu-member
        =@private_chat_room.membership.owner.name
      .left-chat-menu-member
        =@private_chat_room.membership.member.name
    .chat-messages-col
